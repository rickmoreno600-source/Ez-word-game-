      margin: 0;
    }

    .game {
      background: white;
      padding: 25px;
      border-radius: 10px;
      width: 340px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h1 {
      margin-bottom: 10px;
      font-size: 20px;
    }

    .word {
      font-size: 28px;
      letter-spacing: 10px;
      margin: 15px 0;
      font-family: "Courier New", monospace;
    }

    .info {
      margin: 8px 0;
      font-size: 14px;
    }

    .attempts-bar {
      display: flex;
      justify-content: center;
      gap: 6px;
      margin-top: 8px;
    }

    .attempt {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background: #dfe6ee;
    }

    .attempt.used {
      background: #ff6b6b;
    }

    input {
      padding: 8px;
      font-size: 16px;
      width: 64px;
      text-align: center;
      margin-top: 8px;
    }

    .controls {
      margin-top: 10px;
