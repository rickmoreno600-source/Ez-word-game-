<body>
  <div class="game">
    <h1>Word Guess</h1>

    <div class="word" id="wordDisplay"></div>

    <div class="info">
      Wrong guesses left: <span id="attempts">6</span>
      <div class="attempts-bar" id="attemptsBar"></div>
    </div>

    <input id="letterInput" maxlength="1" placeholder="A" />

    <div class="controls">
      <button id="guessBtn">Guess</button>
      <button id="restartBtn" class="secondary">Restart</button>
    </div>

    <div class="message" id="message"></div>
    <div class="guessed" id="guessedList"></div>
  </div>

  <script>
    const words = ["JAVASCRIPT", "BROWSER", "NETLIFY", "CODING", "DEVELOPER"];

    let selectedWord = "";
    let guessedLetters = [];
    let attemptsLeft = 6;
    const maxAttempts = 6;

    const wordDisplay = document.getElementById("wordDisplay");
    const attemptsEl = document.getElementById("attempts");
    const attemptsBar = document.getElementById("attemptsBar");
    const input = document.getElementById("letterInput");
    const guessBtn = document.getElementById("guessBtn");
    const restartBtn = document.getElementById("restartBtn");
    const message = document.getElementById("message");
    const guessedList = document.getElementById("guessedList");

    function startGame() {
      selectedWord = words[Math.floor(Math.random() * words.length)];
      guessedLetters = [];
      attemptsLeft = maxAttempts;
      message.textContent = "";
      input.disabled = false;
      guessBtn.disabled = false;
      updateDisplay();
      updateAttempts();
      input.focus();
    }

    function updateAttempts() {
      attemptsEl.textContent = attemptsLeft;
      attemptsBar.innerHTML = "";
      for (let i = 0; i < maxAttempts; i++) {
        const dot = document.createElement("div");
        dot.className = "attempt" + (i >= attemptsLeft ? " used" : "");
        attemptsBar.appendChild(dot);
      }
    }

    function updateDisplay() {
      wordDisplay.textContent = selectedWord
        .split("")
        .map(l => guessedLetters.includes(l) ? l : "_")
        .join(" ");

      guessedList.textContent =
        "Guessed: " + (guessedLetters.length ? guessedLetters.join(", ") : "â€”");

      if (!wordDisplay.textContent.includes("_")) {
        message.textContent = "ðŸŽ‰ You won!";
        endGame();
      }

      if (attemptsLeft <= 0) {
        message.textContent = "âŒ Game over! Word was: " + selectedWord;
        endGame();
      }
    }

    function guessLetter() {
      if (attemptsLeft <= 0) return;

      const letter = input.value.toUpperCase();
      input.value = "";

      if (!/^[A-Z]$/.test(letter)) {
        message.textContent = "Enter a letter Aâ€“Z";
        return;
      }

      if (guessedLetters.includes(letter)) {
        message.textContent = "Already guessed!";
        return;
      }

      guessedLetters.push(letter);

      if (!selectedWord.includes(letter)) {
        attemptsLeft--;
        message.textContent = "Wrong guess!";
      } else {
        message.textContent = "Correct!";
      }

      updateAttempts();
      updateDisplay();
    }

    function endGame() {
      input.disabled = true;
      guessBtn.disabled = true;
    }

    guessBtn.onclick = guessLetter;
    restartBtn.onclick = startGame;

    input.addEventListener("keydown", e => {
      if (e.key === "Enter") guessLetter();
    });

    input.addEventListener("input", () => {
      input.value = input.value.toUpperCase().replace(/[^A-Z]/g, "");
    });

    startGame();
  </script>
</body>
</html>
