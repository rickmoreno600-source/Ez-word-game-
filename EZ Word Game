<body>
  <div class="game">
    <h1>Word Guess</h1>

    <div class="word" id="wordDisplay"></div>

    <div class="info">
      Wrong guesses left: <span id="attempts">6</span>
    </div>

    <input
      type="text"
      id="letterInput"
      maxlength="1"
      placeholder="A-Z"
    />

    <br />
    <button onclick="guessLetter()">Guess</button>
    <button onclick="resetGame()">Restart</button>

    <div class="message" id="message"></div>
  </div>

  <script>
    const words = ["JAVASCRIPT", "BROWSER", "NETLIFY", "CODING", "DEVELOPER"];
    let selectedWord;
    let guessedLetters;
    let attemptsLeft;

    function startGame() {
      selectedWord = words[Math.floor(Math.random() * words.length)];
      guessedLetters = [];
      attemptsLeft = 6;
      document.getElementById("message").textContent = "";
      updateDisplay();
    }

    function updateDisplay() {
      const display = selectedWord
        .split("")
        .map(letter => (guessedLetters.includes(letter) ? letter : "_"))
        .join(" ");

      document.getElementById("wordDisplay").textContent = display;
      document.getElementById("attempts").textContent = attemptsLeft;

      if (!display.includes("_")) {
        document.getElementById("message").textContent = "üéâ You won!";
      } else if (attemptsLeft === 0) {
        document.getElementById("message").textContent =
          "‚ùå Game over! Word was: " + selectedWord;
      }
    }

    function guessLetter() {
      const input = document.getElementById("letterInput");
      const letter = input.value.toUpperCase();
      input.value = "";

      if (!letter || guessedLetters.includes(letter) || attemptsLeft === 0) {
        return;
      }

      guessedLetters.push(letter);

      if (!selectedWord.includes(letter)) {
        attemptsLeft--;
      }

      updateDisplay();
    }

    function resetGame() {
      startGame();
    }

    startGame();
  </script>
</body>
