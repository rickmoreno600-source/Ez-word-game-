  <meta charset="UTF-8" />
  <title>Word Guessing Game</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .game {
      background: white;
      padding: 25px;
      border-radius: 10px;
      width: 340px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h1 {
      margin-bottom: 10px;
      font-size: 20px;
    }

    .word {
      font-size: 28px;
      letter-spacing: 10px;
      margin: 15px 0;
      font-family: "Courier New", monospace;
    }

    .info {
      margin: 8px 0;
      font-size: 14px;
    }

    .attempts-bar {
      display: flex;
      justify-content: center;
      gap: 6px;
      margin-top: 8px;
    }

    .attempt {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background: #dfe6ee;
    }

    .attempt.used {
      background: #ff6b6b;
    }

    input[type="text"] {
      padding: 8px;
      font-size: 16px;
      width: 64px;
      text-align: center;
      margin-top: 8px;
    }

    .controls {
      margin-top: 10px;
      display: flex;
      gap: 8px;
      justify-content: center;
    }

    button {
      padding: 8px 12px;
      font-size: 14px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background: #007bff;
      color: white;
    }

    button.secondary {
      background: #6c757d;
    }

    button[disabled] {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .message {
      margin-top: 12px;
      font-weight: bold;
      min-height: 1.2em;
    }

    .guessed {
      margin-top: 8px;
      font-size: 13px;
      color: #333;
    }

    .sr-only {
      position: absolute;
      left: -10000px;
      top: auto;
      width: 1px;
      height: 1px;
      overflow: hidden;
    }

    @media (max-width: 380px) {
      .game { width: 92%; padding: 18px; }
