<body>
  <div class="game" aria-labelledby="gameTitle">
    <h1 id="gameTitle">Word Guess</h1>

    <div class="word" id="wordDisplay" aria-live="polite"></div>

    <div class="info">
      Wrong guesses left: <span id="attempts" aria-live="polite">6</span>
      <div class="attempts-bar" id="attemptsBar" aria-hidden="true"></div>
    </div>

    <label for="letterInput" class="sr-only">Enter a letter (A to Z)</label>
    <input
      type="text"
      id="letterInput"
      maxlength="1"
      placeholder="A"
      inputmode="text"
      autocomplete="off"
      aria-label="Enter a letter"
      pattern="[A-Za-z]"
    />

    <div class="controls">
      <button id="guessBtn" type="button">Guess</button>
      <button id="restartBtn" class="secondary" type="button">Restart</button>
    </div>

    <div class="message" id="message" aria-live="assertive" role="status"></div>

    <div class="guessed" id="guessedList" aria-live="polite"></div>
  </div>

  <script>
    // Word list (uppercase)
    const words = ["JAVASCRIPT", "BROWSER", "NETLIFY", "CODING", "DEVELOPER"];

    let selectedWord = "";
    let guessedLetters = new Set();
    let attemptsLeft = 6;
    const maxAttempts = 6;
    let gameOver = false;

    const wordDisplayEl = document.getElementById("wordDisplay");
    const attemptsEl = document.getElementById("attempts");
    const attemptsBarEl = document.getElementById("attemptsBar");
    const inputEl = document.getElementById("letterInput");
    const guessBtn = document.getElementById("guessBtn");
    const restartBtn = document.getElementById("restartBtn");
    const messageEl = document.getElementById("message");
    const guessedListEl = document.getElementById("guessedList");

    function startGame() {
      if (!Array.isArray(words) || words.length === 0) {
        selectedWord = "";
        messageEl.textContent = "No words available to play.";
        inputEl.disabled = true;
        guessBtn.disabled = true;
        guessedListEl.textContent = "Guessed: â€”";
        attemptsBarEl.innerHTML = "";
        attemptsEl.textContent = "0";
        return;
      }

      selectedWord = words[Math.floor(Math.random() * words.length)];
      guessedLetters = new Set();
      attemptsLeft = maxAttempts;
      gameOver = false;

      inputEl.disabled = false;
      guessBtn.disabled = false;
      messageEl.textContent = "";
      guessedListEl.textContent = "Guessed: â€”";
      updateAttemptsBar();
      updateDisplay();
      inputEl.focus();
    }

    function updateAttemptsBar() {
      attemptsBarEl.innerHTML = "";
      const usedCount = maxAttempts - attemptsLeft;
      for (let i = 0; i < maxAttempts; i++) {
        const dot = document.createElement("div");
        dot.className = "attempt" + (i < usedCount ? " used" : "");
        dot.setAttribute("aria-hidden", "true");
        attemptsBarEl.appendChild(dot);
      }
      attemptsEl.textContent = attemptsLeft;
    }

    function updateDisplay() {
      const display = selectedWord
        .split("")
        .map(letter => (guessedLetters.has(letter) ? letter : "_"))
        .join(" ");

      wordDisplayEl.textContent = display;

      // Update guessed letters list
      const guessedAlpha = guessedLetters.size ? Array.from(guessedLetters).join(", ") : "â€”";
      guessedListEl.textContent = "Guessed: " + guessedAlpha;

      if (!display.includes("_")) {
        messageEl.textContent = "ðŸŽ‰ You won!";
        endGame();
      } else if (attemptsLeft <= 0) {
        messageEl.textContent = "âŒ Game over! Word was: " + selectedWord;
        endGame();
      }
      updateAttemptsBar();
    }

    function showTempMessage(text, timeout = 1500) {
      messageEl.textContent = text;
      setTimeout(() => {
        // Only clear if game still running and message hasn't changed to win/lose
        if (!gameOver && wordDisplayEl.textContent.includes("_")) {
          messageEl.textContent = "";
        }
      }, timeout);
    }

    function isLetterChar(ch) {
      return /^[A-Z]$/.test(ch);
    }

    function guessLetter() {
      if (gameOver) return;
      if (attemptsLeft <= 0) return;

      const raw = inputEl.value.toUpperCase().trim();
      inputEl.value = "";
      inputEl.focus();

      if (!raw) {
        showTempMessage("Please enter a letter (Aâ€“Z).");
        return;
      }

      if (!isLetterChar(raw)) {
        showTempMessage("Only letters Aâ€“Z are allowed.");
        return;
      }

      const letter = raw;

      if (guessedLetters.has(letter)) {
        showTempMessage(`You've already guessed "${letter}".`);
        return;
      }

      guessedLetters.add(letter);

      if (!selectedWord.includes(letter)) {
        attemptsLeft--;
        showTempMessage(`Nope â€” "${letter}" is not in the word.`);
      } else {
        showTempMessage(`Good! "${letter}" is in the word.`, 900);
      }

      updateDisplay();
    }

    function endGame() {
      gameOver = true;
      inputEl.disabled = true;
      guessBtn.disabled = true;
      inputEl.blur();
    }

    function resetGame() {
      startGame();
    }

    // Event listeners
    guessBtn.addEventListener("click", guessLetter);
    restartBtn.addEventListener("click", resetGame);

    // Support Enter key
    inputEl.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        guessLetter();
      }
    });

    // Keep input sanitized to single character (optional)
    inputEl.addEventListener("input", () => {
      inputEl.value = inputEl.value.toUpperCase().replace(/[^A-Z]/g, "").slice(0, 1);
    });

    // Start first game
    startGame();
  </script>
</body>
</html>
